# Docker Deployment Environment Variables
# Copy to .env before running docker-compose

# Database (connects to postgres service in docker-compose)
DATABASE_URL=postgresql://archcelerate:archcelerate_dev_password@postgres:5432/archcelerate

# Redis (connects to redis service in docker-compose)
REDIS_URL=redis://redis:6379

# AI Services (REQUIRED - add your real keys)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
VOYAGE_API_KEY=your-voyage-api-key
TAVILY_API_KEY=tvly-...

# Authentication
NEXTAUTH_SECRET=docker-dev-secret-key-min-32-characters-long-for-local
NEXTAUTH_URL=http://localhost:3000

# OAuth (optional for local - use dummy values if not needed)
GOOGLE_CLIENT_ID=dummy-google-id
GOOGLE_CLIENT_SECRET=dummy-google-secret
FACEBOOK_CLIENT_ID=dummy-facebook-id
FACEBOOK_CLIENT_SECRET=dummy-facebook-secret
GITHUB_ID=dummy-github-id
GITHUB_SECRET=dummy-github-secret

# Admin
ADMIN_REFRESH_KEY=local-admin-key-change-in-production

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_AGENTS=true
NEXT_PUBLIC_ENABLE_MULTIMODAL=true

# Node Environment
NODE_ENV=production
