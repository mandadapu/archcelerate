generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?
  emailVerified      DateTime?
  image              String?
  experienceYears    Int?
  targetRole         String?
  onboardedAt        DateTime?
  diagnosisCompleted Boolean   @default(false)
  createdAt          DateTime  @default(now())

  accounts                Account[]
  sessions                Session[]
  learningEvents          LearningEvent[]
  skillDiagnosis          SkillDiagnosis?
  mentorConversations     MentorConversation[]
  userProgress            UserProgress[]
  conceptCompletions      ConceptCompletion[]
  labAttempts             LabAttempt[]
  projectSubmissions      ProjectSubmission[]
  documents               Document[]
  labSubmissions          LabSubmission[]
  weekProjectSubmissions  WeekProjectSubmission[]
  userWeekProgress        UserWeekProgress[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model LearningEvent {
  id         String   @id @default(cuid())
  userId     String
  eventType  String
  eventData  Json?
  occurredAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, occurredAt])
  @@index([eventType, occurredAt])
}

model SkillDiagnosis {
  userId          String   @id
  quizAnswers     Json
  skillScores     Json
  recommendedPath String
  completedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MentorConversation {
  id            String   @id @default(cuid())
  userId        String
  title         String?
  messages      Json
  contextSprint String?
  contextConcept String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, updatedAt(sort: Desc)])
}

// Learning Content Models
model UserProgress {
  id           String   @id @default(cuid())
  userId       String
  sprintId     String
  conceptId    String
  status       String   // 'not_started' | 'in_progress' | 'completed'
  startedAt    DateTime?
  completedAt  DateTime?
  lastAccessed DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sprintId, conceptId])
  @@index([userId, sprintId])
  @@index([userId, status])
}

model ConceptCompletion {
  id               String   @id @default(cuid())
  userId           String
  sprintId         String
  conceptId        String
  timeSpentSeconds Int      @default(0)
  completedAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, sprintId])
  @@index([conceptId, completedAt])
}

model LabAttempt {
  id          String   @id @default(cuid())
  userId      String
  labId       String
  sprintId    String
  conceptId   String
  score       Int?
  passed      Boolean  @default(false)
  feedback    Json?
  attemptedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, labId])
  @@index([userId, sprintId])
}

// Project Submission & Code Review Models
model ProjectSubmission {
  id             String   @id @default(cuid())
  userId         String
  projectNumber  Int
  githubRepoUrl  String
  deployedUrl    String?
  submissionData Json?
  reviewStatus   String   @default("pending") // 'pending' | 'reviewed' | 'failed'
  overallScore   Float?
  reviewedAt     DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user             User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewFeedback   CodeReviewFeedback[]

  @@index([userId, projectNumber])
  @@index([userId, createdAt])
}

model CodeReviewFeedback {
  id                     String   @id @default(cuid())
  submissionId           String
  overallScore           Float?
  functionalityScore     Float?
  codeQualityScore       Float?
  aiBestPracticesScore   Float?
  architectureScore      Float?
  suggestions            Json?
  goodPractices          Json?
  criticalIssues         Json?
  improvementsNeeded     Json?
  reviewIteration        Int      @default(1)
  createdAt              DateTime @default(now())

  submission      ProjectSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  reviewComments  ReviewComment[]

  @@index([submissionId])
}

model ReviewComment {
  id         String   @id @default(cuid())
  feedbackId String
  filePath   String?
  lineNumber Int?
  severity   String   // 'error' | 'warning' | 'suggestion' | 'praise'
  category   String?
  message    String   @db.Text
  suggestion String?  @db.Text
  createdAt  DateTime @default(now())

  feedback CodeReviewFeedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)

  @@index([feedbackId])
}

// RAG System Models (Sprint 2)
model Document {
  id          String   @id @default(cuid())
  userId      String
  title       String
  fileName    String
  fileSize    Int
  contentType String
  createdAt   DateTime @default(now())

  user   User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  chunks DocumentChunk[]

  @@index([userId, createdAt])
}

model DocumentChunk {
  id            String                        @id @default(cuid())
  documentId    String
  content       String                        @db.Text
  embedding     Unsupported("vector(1536)")?
  chunkIndex    Int
  pageNumber    Int?
  metadata      Json?
  createdAt     DateTime                      @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, chunkIndex])
}

// Week-based Curriculum Models
model CurriculumWeek {
  id          String   @id @default(cuid())
  weekNumber  Int      @unique
  title       String
  description String?  @db.Text
  objectives  Json     // array of learning objectives
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  concepts           Concept[]
  labs               Lab[]
  weekProjects       WeekProject[]
  userWeekProgress   UserWeekProgress[]
}

model Concept {
  id              String   @id @default(cuid())
  weekId          String
  orderIndex      Int
  slug            String   @unique
  title           String
  contentPath     String   // path to MDX file
  estimatedMinutes Int?
  createdAt       DateTime @default(now())

  week CurriculumWeek @relation(fields: [weekId], references: [id], onDelete: Cascade)

  @@unique([weekId, orderIndex])
  @@index([weekId, orderIndex])
}

model Lab {
  id          String   @id @default(cuid())
  weekId      String
  slug        String   @unique
  title       String
  description String?  @db.Text
  exercises   Json     // array of exercise descriptions
  createdAt   DateTime @default(now())

  week           CurriculumWeek @relation(fields: [weekId], references: [id], onDelete: Cascade)
  labSubmissions LabSubmission[]

  @@index([weekId])
}

model LabSubmission {
  id              String   @id @default(cuid())
  userId          String
  labId           String
  exerciseNumber  Int
  submissionData  Json     // varies by exercise type
  completed       Boolean  @default(false)
  submittedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  lab  Lab  @relation(fields: [labId], references: [id], onDelete: Cascade)

  @@unique([userId, labId, exerciseNumber])
  @@index([userId, labId])
}

model WeekProject {
  id              String   @id @default(cuid())
  weekId          String
  slug            String   @unique
  title           String
  description     String?  @db.Text
  requirements    Json     // array of requirements
  successCriteria Json
  estimatedHours  Int?
  createdAt       DateTime @default(now())

  week                 CurriculumWeek         @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekProjectSubmissions WeekProjectSubmission[]

  @@index([weekId])
}

model WeekProjectSubmission {
  id             String   @id @default(cuid())
  userId         String
  projectId      String
  githubUrl      String?
  deployedUrl    String?
  writeupContent String?  @db.Text
  status         String   @default("draft") // 'draft' | 'submitted' | 'reviewed'
  submittedAt    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project WeekProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId, createdAt])
}

model UserWeekProgress {
  id                String    @id @default(cuid())
  userId            String
  weekId            String
  conceptsCompleted Int       @default(0)
  conceptsTotal     Int
  labCompleted      Boolean   @default(false)
  projectCompleted  Boolean   @default(false)
  startedAt         DateTime  @default(now())
  completedAt       DateTime?

  user User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  week CurriculumWeek @relation(fields: [weekId], references: [id], onDelete: Cascade)

  @@unique([userId, weekId])
  @@index([userId, weekId])
}
